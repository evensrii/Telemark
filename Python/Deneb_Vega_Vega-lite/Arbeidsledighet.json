{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "white",
  "config": {
    "view": {
      "stroke": "transparent",
      "strokeWidth": 1
    },
    "font": "Calibri",
    "text": {
      "font": "Calibri"
    },
    "mark": {
      "tooltip": {
        "content": "encoding"
      }
    }
  },
  "data": {
    "name": "dataset"
  },
  "transform": [
    {
      "calculate": "datum.SelectedMeasureName === 'Andel av arbeidsstyrken' ? datum.SelectedMeasure * 100 : datum.SelectedMeasure",
      "as": "Formatted_measure"
    },
    {
      "calculate": "datum.SelectedMeasureName === 'Andel av arbeidsstyrken' ? replace(format(datum.Formatted_measure, '.1f'), '.', ',') + ' %' : datum.Formatted_measure",
      "as": "Formatted_measure_2"
    },
    {
      "calculate": "timeFormat(datum['Tid'], '%B %Y')",
      "as": "Dato formatted"
    },
    {
      "window": [{"op": "row_number", "as": "row_number"}],
      "sort": [{"field": "Tid", "order": "ascending"}]
    },
    {
      "calculate": "datum.row_number % 10 == 0 ? 1 : 0",
      "as": "ShowLabel"
    },
    {
      "window": [{"op": "max", "field": "Tid", "as": "LatestDate"}]
    },
    {
      "calculate": "datum.Tid == datum.LatestDate ? 1 : 0",
      "as": "ShowLatestLabel"
    },
    {
      "calculate": "datum.SelectedMeasureName === 'Andel av arbeidsstyrken' ? 'Andel av arbeidsstyrken' : 'Antall personer'",
      "as": "TooltipTitle"
    },
    {
      "calculate": "datum.TooltipTitle + '  |  ' + datum.Formatted_measure_2",
      "as": "FormattedTooltip"
    }
  ],
  "layer": [ 
    {
      "encoding": {
        "x": {
          "field": "Tid",
          "type": "temporal",
          "axis": {
            "grid": false,
            "labelExpr": "timeFormat(datum.value, '%Y')",
            "ticks": true,
            "tickCount": "month",
            "tickSize": 4,
            "tickColor": "#CACACA",
            "labelFont": "Calibri",
            "labelFontSize": 24,
            "title": null,
            "domainColor": "#CACACA"
          }
        },
        "y": {
          "field": "Formatted_measure",
          "type": "quantitative",
          "axis": null
        }
      },
      "layer": [
        {
          "mark": {
            "type": "area",
            "interpolate": "monotone",
            "opacity": 0.3,
            "line": {
              "color": "#005260"
            },
            "color": {
              "x1": 1,
              "y1": 1,
              "x2": 1,
              "y2": 0,
              "gradient": "linear",
              "stops": [
                {
                  "offset": 0.05,
                  "color": "white"
                },
                {
                  "offset": 1,
                  "color": "#005260"
                }
              ]
            }
          }
        },
        {
          "transform": [
            {
              "loess": "Formatted_measure",
              "on": "Tid",
              "bandwidth": 1 // Adjust smoothness (0.1 - 1.0)
            }
          ],
          "mark": {
            "type": "line",
            "strokeDash": [4, 4],
            "color": "grey",
            "strokeWidth": 2,
            "opacity": 0.9
          },
          "encoding": {
            "x": {"field": "Tid", "type": "temporal"},
            "y": {"field": "Formatted_measure", "type": "quantitative"}
          }
        },
        {
          "params": [
            {
              "name": "label",
              "select": {
                "type": "point",
                "encodings": ["x"],
                "nearest": true,
                "on": "mouseover"
              }
            }
          ],
          "mark": {
            "type": "point",
            "tooltip": {"content": "data"},
            "color": "#3A3D56"
          },
          "encoding": {
            "tooltip": [
            {
              "field": "TooltipTitle",
              "type": "nominal",
              "title": "Mål"
            },
            {
              "field": "Formatted_measure_2",
              "type": "nominal",
              "title": "Verdi"
            },
            {
              "field": "Dato formatted",
              "type": "nominal",
              "title": "Måned"
            }
          ],
            "opacity": {
              "condition": {
                "param": "label",
                "empty": false,
                "value": 1
              },
              "value": 0
            }
          }
        },
        {
          "transform": [
            {
              "filter": "datum.ShowLabel == 1 || timeFormat(datum['Tid'], '%Y-%m') == '2020-03'"
            },
            {
            "window": [{"op": "row_number", "as": "filtered_row_number"}],
            "sort": [{"field": "Tid", "order": "ascending"}]
            }
          ],
          "mark": {
            "type": "text",
            "align": "center",
            "dy": { "expr": "datum.filtered_row_number % 20 === 0 ? -30 : -30" },
            "fontSize": 20,
            "color": "#3A3D56",
            "font": "Calibri"
          },
          "encoding": {
            "x": {"field": "Tid", "type": "temporal"},
            "y": {"field": "Formatted_measure", "type": "quantitative"},
            "text": {
              "field": "Formatted_measure_2",
              "type": "nominal"
            }
          }
        },
        {
          "transform": [
            {
              "filter": {
                "param": "label", 
                "empty": false
              }
            }
          ],
          "layer": [
            {
              "mark": {
                "type": "rule",
                "color": "gray"
              },
              "encoding": {
                "x": {
                  "type": "temporal",
                  "field": "Tid",
                  "aggregate": "min"
                },
                "y": {
                  "datum": {"expr": "domain('y')[0]"}
                },
                "y2": {
                  "datum": {"expr": "domain('y')[1]"}
                }
              }
            },
            {
              "encoding": {
                "text": {
                  "type": "nominal",
                  "field": "Formatted_measure_2"
                },
                "x": {
                  "type": "temporal",
                  "field": "Tid"
                },
                "y": {
                  "type": "quantitative",
                  "field": "Formatted_measure"
                }
              },
              "layer": [ 
                {
                  "mark": {
                    "type": "text",
                    "fontSize": 20,
                    "stroke": "white",
                    "color": "#3A3D56",
                    "strokeWidth": 2,
                    "align": "left",
                    "dx": 5,
                    "dy": -5
                  }
                },
                {
                  "mark": {
                    "type": "text",
                    "align": "left",
                    "fontSize": 20,
                    "dx": 5,
                    "dy": -5
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}